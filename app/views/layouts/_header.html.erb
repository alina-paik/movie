<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><a href="movies#index" class="nav-link px-2 text-secondary">Home</a></li>
        <li><a href="categories#index" class="nav-link px-2 text-white">Categories</a></li>
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
      </form>
      <%- if @user? %>
      <div class="text-end">
        <%= button_to "Logout", destroy_user_session_path, method: :delete, form: {turbolink: false}, class: "btn btn-primary me-2" %>
      </div>
      <div class="dropdown text-end">
        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="#">Sign out</a></li>
        </ul>
      </div>
      <% end %>
      <div class="text-end">
        <%= link_to new_session_path do %>
        <button type="button" class="btn btn-primary me-2">Login</button>
        <% end %>
        <%= link_to new_user_path do %>
        <button type="button" class="btn btn-warning">Sign-up</button>
        <% end %>
      </div>
    </div>
  </div>
</header>
